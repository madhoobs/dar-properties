
<% if (true) { %>

<h1> My Account </h1>
<img src="/uploads/<%=currentUser.profileImage%>">
<a href="/profile/edit" class="btn btn-outline-primary"> Edit My Profile</a> 
<% } %>

<table class="table able-striped">

    <tr>
        <% if(user.companyName) {  %>
        <th> Company Name </th>
        <th> Company CR </th>
        <th> City </th>
        <th> Address </th>
        <% } else { %>
        <th> First Name </th>
        <th> Last Name </th>
        <% } %>
        
        <th> Phone Number </th>
        <th> Email Address </th>

    </tr>


    <tr>
        <td>
            <% if(user.companyName) {  %>
                <%= user.companyName %>                 
                <%= user.companyCR %>
                <%= user.city %>
                <%= user.address %>                 
                    
            <% } else { %>
                <%= user.firstName %>                 
                <%= user.lastName %>                 
            <% } %>
        </td>

        <td> 
            <%= user.phone %>
        </td>
        
        <td> 
            <%= user.email %>
        </td>




        <a href="/views/comment/questions.ejs?=<%= currentUser._id %>" class="btn btn-outline-primary">Pending Questions</a>

    </tr>




</table>