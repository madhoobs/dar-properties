<body>
    <!--header-top start -->
    <header id="header-top" class="header-top">
        <ul>
            <li>
                <div class="header-top-left">
                    <ul>
                        <li class="select-opt">
                            <select name="currency" id="currency">
                                <option value="bhd">BHD</option>
                            </select>
                        </li>
                        <li class="select-opt">
                            <a href="#"><span class="lnr lnr-magnifier"></span></a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="head-responsive-right pull-right">
                <div class="header-top-right">
                    <ul>
                        <% if(currentUser) { %>
                            <li class="header-top-contact">
                        <% if(currentUser.companyName) { %>
                            Welcome, <%= currentUser.companyName %>
                        <% } else { %>
                            Welcome, <%= currentUser.firstName %>
                        <% } %>
                            </li>
                            <li class="header-top-contact">
                                <a href="/profile?id=<%= currentUser._id %>">My Account</a>
                            </li>
                            <li class="header-top-contact">
                                <a href="/auth/logout">Logout</a>
                            </li>
                        <% } else { %>
                                <li class="header-top-contact">
                                    <a href="/auth/login">Login</a>
                                </li>
                                <li class="header-top-contact">
                                    <a href="/auth/signup">Register</a>
                                </li>
                        <% } %>
                    </ul>
                </div>
            </li>
        </ul>

    </header><!--/.header-top-->
    <!--header-top end -->
<!-- New Navbar -->
<nav class="navbar navbar-sticky navbar-expand-lg navbar-light bg-light" style="padding: 0 30px 0 30px;">
    <div class="navbar-header">
        <a class="navbar-brand" href="/">Dar<span>Properties</span></a>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText"
        aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
        </ul>
        <span class="navbar-text">
            <ul class="nav navbar-nav navbar-right navbar-nav mr-auto" data-in="fadeInDown" data-out="fadeOutUp">
                <li><a class="nav-link" href="/">HOME</a></li>
                <li class="scroll"><a class="nav-link" href="/#explore">EXPLORE</a></li>
                <% if(currentUser && currentUser.isSeller) { %>
                    <li><a class="nav-link" href="/listing/add">NEW LISTING</a></li>
                <% } else if (!currentUser) { %>
                    <li class="scroll"><a class="nav-link" href="/#contact">CONTACT</a></li>
                <% } %>
            </ul><!--/.nav -->
        </span>
    </div>
</nav>
<!-- End of Navbar -->
    <!-- top-area Start -->
    
    <!-- top-area End -->

    
<body>
    <%- body  %>

    <!--subscription start -->
    <% if(!currentUser) { %>
    <section id="contact" class="subscription">
        <div class="container">
            <div class="subscribe-title text-center">
                <h2>
                    do you want to add your property listing with us?
                </h2>
                <p>
                    Dar Properties offer you to list your real estate with us and we very much able to promote your listings.
                </p>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="subscription-input-group">
                        <form action="#">
                            <input type="email" class="subscription-input-form" placeholder="Enter your email here">
                            <button class="appsLand-btn subscribe-btn" onclick="window.location.href='#'">
                                create account
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    
    </section><!--/subscription-->
    <% } %>
    <!--subscription end -->
    
    <!--footer start-->
    <footer id="footer" class="footer">
        <div class="container">
            <div class="footer-menu">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/">Dar<span>Properties</span></a>
                        </div><!--/.navbar-header-->
                    </div>
                    <div class="col-sm-9">
                        <ul class="footer-menu-item">
                            <li class="scroll"><a href="#explore">explore</a></li>
                            <li class="scroll"><a href="#contact">contact</a></li>
                        </ul><!--/.nav -->
                    </div>
                </div>
            </div>
            <div class="hm-footer-copyright">
                <div class="row">
                    <div class="col-sm-5">
                        <p>
                            Developed by &copy;<a href="https://git.generalassemb.ly/Madhoob/dar-properties/graphs/contributors">Dar Properties team</a>
                        </p><!--/p-->
                    </div>
                    <div class="col-sm-7">
                        <div class="footer-social">
                            <span><i class="fa fa-phone"> +973 8000 8088</i></span>
                            <a href="https://git.generalassemb.ly/Madhoob/dar-properties"><i class="fa fa-github"></i></a>
                        </div>
                    </div>
                </div>
    
            </div><!--/.hm-footer-copyright-->
        </div><!--/.container-->
    
        <div id="scroll-Top">
            <div class="return-to-top">
                <i class="fa fa-angle-up " id="scroll-top" data-toggle="tooltip" data-placement="top" title=""
                    data-original-title="Back to Top" aria-hidden="true"></i>
