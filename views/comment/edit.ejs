<link rel="stylesheet" href="style.css">

<body>
  <section id="contact-2" class="subscription">
    <div class="container">
      <div class="subscribe-title text-center">
        <h2> Edit Question </h2>
      </div>
      <form method="POST" action="/comment/edit">
        <div class="col-md-6">
            <label for="question" class="form-label">Your Question</label>
            <input type="text" name="question" class="form-control" value="<%= comment.question %>">
          </div>

          <input type="hidden" name="id" value="<%= comment._id %>">
          <input type="hidden" name="listingId" value="<%= comment.listingID %>">

          <div class="col-12">

            <button type="submit" class="btn btn-outline-danger" style="width: 50%; margin-top: 5px;">Edit Question</button>
          </div>

      </form>
          </div>

  </section>

</body>